extends ../shared/template

block content
  .row
    .small-6.columns
      form#loginform(action='/register', method='post')
        fieldset
          legend Register
          .row
            .small-12.columns
              label Email
              input#useremail(type='text', name='email', autofocus=true)
          .row
            .small-12.columns
              label Password
              input#userpword(type='password', name='password')
          .row
            .small-12.columns
              button.tiny.radius.alert Register
    .small-6.columns
      form#loginform(action='/login', method='post')
        fieldset
          legend Login
          .row
            .small-12.columns
              label Email
              input#useremail(type='text', name='email')
          .row
            .small-12.columns
              label Password
              input#userpword(type='password', name='password')
          .row
            .small-12.columns
              button.tiny.radius Login

