extends ../shared/template

block content

  .row
    .small-6.columns
      h5= user.email
    .small-6.columns
      a(href='/notes/new'): .right.button.tiny.round New Note
  .row
    .small-12.columns
      each note in notes
        .note
          .title: a(href='/notes/'+note._id)= note.title
          .date= moment(note.dateCreated).calendar()
          .tags: a(href='#')= note.tags

  script(src='/js/vendor/moment.js')
