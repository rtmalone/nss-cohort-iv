extends ../shared/template

block content
  .row
    .small-12.columns
      form.form(action='/notes', method='post', enctype='multipart/form-data')
        fieldset
          .row
            .small-4.columns
              label Title
              input(type='text', name='title', autofocus=true)
            .small-4.columns
              label Date 
              input(type='date', name='dateCreated')
            .small-4.columns
              label Tags
              input(type='text', name='tags')
          .row
            .small-12.columns
              textarea(type='textarea', name='body', placeholder='Note...')
          .row
            .small-12.columns
              button.tiny.radius.alert.right Save
