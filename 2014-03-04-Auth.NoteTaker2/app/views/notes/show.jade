extends ../shared/template

block content
  .row
    .small-12.colums
        h5= moment(note.dateCreated).format('MMM Do, YYYY')
        h4= note.body
        h5= note.tags

  .row
    .small-12.columns
      form(action='/notes/'+note._id, method='post')
        input(type='hidden', name='_method', value='delete')
        button.tiny.radius.alert Delete

  script(src='/js/vendor/moment.js')
