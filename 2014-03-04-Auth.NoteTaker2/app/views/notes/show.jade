extends ../shared/template

block content
  .row
    .small-12.colums
      form(action=i'/notes/'+note._id, type='hidden', name='_method', value='delete')
        h1= note.title
        h5= moment(note.dateCreated).format('MMM Do, YYYY')
        h3= note.body
        h5= note.tags

  .row
    .small-12.columns
      button.tiny.radius.alert Delete
